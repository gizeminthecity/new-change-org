{{#if isOwner}}
<form action="/petitions/{{petition._id}}" method="POST">
<label for="title">Title: </label>
<input type="text" name="title" id="title" placeholder="write here">
<br>
<label for="description">Description: </label>
<input type="text" name="description" id="description" placeholder="Enter your update here">
<br>
<button type="submit">Update petition</button>
</form>
 
  <br>
  <a href="/petitions/{{petition._id}}/delete">Delete Petition</a> 
  

{{/if}}




{{#if errorMessage}}
  <h5>{{errorMessage}}</h5>
{{/if}}

